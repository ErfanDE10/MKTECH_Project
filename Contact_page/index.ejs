        <textarea id="message" name="message" required></textarea>
        
        <button type="submit">Send Message</button>
      </form>
    </section>

    <section class="contact-info">
      <ul>
        <li>Technical Unit: 0912-123-4567</li>
        <li>Sales Unit: 0912-789-6543</li>
        <li>Support Unit: 0912-456-7891</li>
        <li>Finance Unit: 0938-123-4567</li>
      </ul>
    </section>

    <section class="blue-section">
        <p>To receive a free quick consultation, please enter your information</p>
        <form action="/api/quickconsult" method="POST">
            <input type="text" name="name" placeholder="Your Name" required>
            <input type="email" name="email" placeholder="Email" required>
            <button type="submit">Submit</button>
        </form>
    </section>
  </main>

